        "uuid": "^9.0.0",
        "antd": "^5.5.0"
    },
    "dependencies": {
        "@babel/core": "^7.21.8",
        "@babel/preset-env": "^7.21.5",
        "@babel/preset-typescript": "^7.21.5",
        "@types/react": "^18.2.0",
        "@types/redux-logger": "^3.0.9",
        "@types/uuid": "^9.0.1",
        "@vitejs/plugin-react": "^4.0.0",
        "babel-jest": "^29.5.0",
        "jest": "^29.5.0",
        "query-string": "^8.1.0",        
        "storybook": "^7.0.10",
        "ts-jest": "^29.1.0",
        "vite-plugin-dts": "^2.3.0"
