{
    "name": "rd-component",
    "version": "0.1.74",
    "type": "module",
    "description": "Reddwarf public component lib",
    "files": [
        "dist"
    ],
    "main": "./dist/rd-component.es.js",
    "module": "./dist/rd-component.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/rd-component.es.js"
        },
        "./dist/style.css": {
            "import": "./dist/style.css",
            "require": "./dist/style.css"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "export NODE_ENV=production && tsc && vite build --mode production",
        "watch": "vite build --watch",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "test": "jest",
        "storybook": "storybook dev --host 0.0.0.0 --port 9001 -c .storybook"
    },
    "jest": {
        "transform": {
            "^.+\\.ts?$": "babel-jest",
            "^.+\\.jsx?$": "babel-jest",
            "^.+\\.tsx$": "ts-jest"
        }
    },
    "devDependencies": {
        "@jest/globals": "^29.5.0",
        "@storybook/cli": "^7.0.10",
        "@storybook/react": "^7.0.10",
        "@storybook/react-vite": "^7.0.10",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.5.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.1.0",
        "@types/react": "^18.2.0",
        "@types/redux-logger": "^3.0.9",
        "axios": "^1.3.4",
        "js-wheel": "https://github.com/jiangxiaoqiang/js-wheel.git",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^8.0.5",
        "redux": "^4.2.1",
        "redux-logger": "^3.0.6",
        "uuid": "^9.0.0",
        "vite": "^4.3.5",
        "@reduxjs/toolkit": "^1.9.5",
        "addon-redux": "^2.0.11",
        "antd": "^5.5.0"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^8.0.5",
        "redux": "^4.2.1",
        "@reduxjs/toolkit": "^1.9.5",
